<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/artistListViewItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:clickable="true"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    tools:context="com.northshine.spotifystreamer.ArtistListItemActivityFragment">

    <ImageView
        android:id="@+id/artistImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/artist_icon_alt" />

    <TextView
        android:id="@+id/artistTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:paddingTop="12dp"
        android:text="@string/artist_name_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>
